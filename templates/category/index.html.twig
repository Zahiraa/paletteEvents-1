{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block _content %}

    <div class="d-flex flex-row justify-content-between align-items-center flex-wrap">
        <h1 class="action-title">Catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-paletteEvent radius mr-2 mb-2">Nouvelle catégorie <i
                    class="icon-plus2"></i></a>
    </div>

    <div class="table-responsive">
        <table class="table datatable-basic table-striped table-hover" id="dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Events</th>
                    <th>Icone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.events|length }}</td>
                    <td>
                        {% if category.icon %}
                            <img src="/uploads/{{ category.icon.realName }}" alt="Icon {{ category.name }} not found" width="80">
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}">
                            <i class="icon-pencil text-paletteEvent-dark" title="Modifier"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
