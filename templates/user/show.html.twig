{% extends 'admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block _content %}

    <div class="d-flex flex-row justify-content-between align-items-center flex-wrap">
        <h1 class="action-title">Fiche utilisateur</h1>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-paletteEvent radius mr-2 mb-2">Modifier</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Date de Naissance</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ user.profession }}</td>
            </tr>
            <tr>
                <th>C. d'interet</th>
                <td>{{ user.centreInteret }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-chellal btn-secondary" href="{{ path('app_user_index') }}">Retour Ã  la liste</a>
{% endblock %}
