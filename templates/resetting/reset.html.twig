{% extends 'base.html.twig' %}
{% block title %}Réinitialisation{% endblock %}
{% block body %}
    <div class="limiter">
        <div class="register-container">
            <div class="request-wrap">
                <span class="register-form-title">Réinitialisation</span>
                {{ form_start(form, { 'action': path('app_user_reset', {'token': token}), 'attr': {'class': 'register-form'} }) }}

                <div class="form-group {% if not form.vars.valid %} has-error{% endif %}">
                    {{ form_row(form.password.first) }}
                </div>

                <div class="form-group {% if not form.vars.valid %} has-error{% endif %}">
                    {{ form_row(form.password.second )}}
                </div>

                <button class="register-form-btn" type="submit">
                    Valider
                </button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
    
{% endblock %}
