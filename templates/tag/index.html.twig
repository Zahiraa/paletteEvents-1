{% extends 'admin.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block _content %}

    <div class="d-flex flex-row justify-content-between align-items-center flex-wrap">
        <h1 class="action-title">Tags</h1>
        <a href="{{ path('app_tag_new') }}" class="btn btn-paletteEvent radius mr-2 mb-2">Nouveau Tag <i
                    class="icon-plus2"></i></a>
    </div>

    <div class="table-responsive">
        <table class="table datatable-basic table-striped table-hover" id="dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                        <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">
                                <i class="icon-pencil text-paletteEvent-dark" title="Modifier"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
